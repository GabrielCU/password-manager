<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Name -->
    <TextView
            android:id="@+id/detailNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <!-- Login -->
    <TextView
            android:id="@+id/detailLoginTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Login"
            app:layout_constraintTop_toBottomOf="@id/detailNameTextView"
            app:layout_constraintStart_toStartOf="parent"/>

    <!-- Password -->
    <TextView
            android:id="@+id/detailPasswordTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Password"
            app:layout_constraintTop_toBottomOf="@id/detailLoginTextView"
            app:layout_constraintStart_toStartOf="parent"/>

    <!-- Toggle Password Visibility Button -->
    <ImageButton
            android:id="@+id/togglePasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="@string/toggle_password_visibility"
            app:layout_constraintTop_toTopOf="@id/detailPasswordTextView"
            app:layout_constraintBottom_toBottomOf="@id/detailPasswordTextView"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
